	<script>

		function sortNumbers() {

			var numberInputGroup = document.getElementById("numInputs");

			var numbers = [];

			var numberInputArray = numberInputGroup.getElementsByClassName("numInput");

			for (let i = 0; i < numberInputArray.length; i++) {
				numbers[i] = Number(numberInputArray[i].value);
			}


			//SELECTION SORT    
			var temp = 0;
			var t = 0;

			for (let i = 0; i < numbers.length; i++) {
				temp = i;
				for (let j = i; j < numbers.length; j++) {
					if (numbers[j] < numbers[temp]) {
						temp = j;
					}
				}
				//swapping 
				t = numbers[i];
				numbers[i] = numbers[temp];
				numbers[temp] = t;
			}



