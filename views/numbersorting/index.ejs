			var numberOutputGroup = document.getElementById("numOutputs");

			numberOutputGroup.style.display = "flex"

			var numberOutputSpans = numberOutputGroup.getElementsByClassName("numOutput");

			for (let i = 0; i < numberOutputSpans.length; i++) {
				numberOutputSpans[i].innerText = numbers[i];
			}

		}




	</script>


